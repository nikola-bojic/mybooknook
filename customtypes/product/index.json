{
  "format": "custom",
  "id": "product",
  "label": "Product",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "sku": {
        "type": "Text",
        "config": {
          "label": "SKU",
          "placeholder": ""
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "label": "Category",
          "select": "document",
          "customtypes": ["product_category"]
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "moq": {
        "type": "Text",
        "config": {
          "label": "MOQ",
          "placeholder": ""
        }
      },
      "active": {
        "type": "Boolean",
        "config": {
          "label": "Active",
          "placeholder_false": "No",
          "placeholder_true": "Yes",
          "default_value": false
        }
      },
      "price": {
        "type": "Number",
        "config": {
          "label": "Price",
          "placeholder": ""
        }
      },
      "variations": {
        "type": "Group",
        "config": {
          "label": "Variations",
          "repeat": true,
          "fields": {
            "label": {
              "type": "Text",
              "config": {
                "label": "Label",
                "placeholder": ""
              }
            },
            "description": {
              "type": "Text",
              "config": {
                "label": "Description",
                "placeholder": ""
              }
            },
            "variation": {
              "type": "Text",
              "config": {
                "label": "Variation",
                "placeholder": ""
              }
            },
            "price": {
              "type": "Number",
              "config": {
                "label": "Price",
                "placeholder": ""
              }
            }
          }
        }
      },
      "linked_products": {
        "type": "Group",
        "config": {
          "label": "Linked products",
          "repeat": true,
          "fields": {
            "product": {
              "type": "Link",
              "config": {
                "label": "Product",
                "select": "document",
                "repeat": false,
                "customtypes": [
                  {
                    "id": "product",
                    "fields": [
                      "title",
                      "description",
                      {
                        "id": "gallery",
                        "fields": ["image"]
                      },
                      "price",
                      "active",
                      {
                        "id": "category",
                        "customtypes": [
                          {
                            "id": "product_category",
                            "fields": ["name"]
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "video": {
              "type": "SharedSlice"
            },
            "text": {
              "type": "SharedSlice"
            },
            "two_columns": {
              "type": "SharedSlice"
            },
            "image": {
              "type": "SharedSlice"
            },
            "hero": {
              "type": "SharedSlice"
            },
            "gallery": {
              "type": "SharedSlice"
            },
            "contact_form": {
              "type": "SharedSlice"
            },
            "faq": {
              "type": "SharedSlice"
            },
            "carousel": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "Gallery": {
      "gallery": {
        "type": "Group",
        "config": {
          "label": "Gallery",
          "repeat": true,
          "fields": {
            "image": {
              "type": "Image",
              "config": {
                "label": "Image",
                "constraint": {},
                "thumbnails": []
              }
            },
            "caption": {
              "type": "Text",
              "config": {
                "label": "Caption",
                "placeholder": ""
              }
            },
            "description": {
              "type": "StructuredText",
              "config": {
                "label": "Description",
                "placeholder": "",
                "allowTargetBlank": true,
                "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
              }
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "label": "Meta Image",
          "constraint": {
            "height": 2400,
            "width": 2400
          },
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
