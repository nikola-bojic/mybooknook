{
  "format": "page",
  "id": "post",
  "label": "Blog post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "excerpt": {
        "type": "StructuredText",
        "config": {
          "label": "Excerpt",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "paragraph"
        }
      },
      "date": {
        "type": "Date",
        "config": {
          "label": "Date",
          "placeholder": ""
        }
      },
      "types": {
        "type": "Group",
        "config": {
          "label": "Types",
          "repeat": true,
          "fields": {
            "type": {
              "type": "Select",
              "config": {
                "label": "Type",
                "placeholder": "",
                "options": ["Inspiration", "How to", "Science"]
              }
            }
          }
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "Image",
          "constraint": {
            "width": 1000,
            "height": 1000
          },
          "thumbnails": []
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "video": {
              "type": "SharedSlice"
            },
            "contact_form": {
              "type": "SharedSlice"
            },
            "two_columns": {
              "type": "SharedSlice"
            },
            "faq": {
              "type": "SharedSlice"
            },
            "gallery": {
              "type": "SharedSlice"
            },
            "carousel": {
              "type": "SharedSlice"
            },
            "text": {
              "type": "SharedSlice"
            },
            "hero": {
              "type": "SharedSlice"
            },
            "image": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "label": "Meta image",
          "constraint": {
            "height": 2400,
            "width": 2400
          },
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
